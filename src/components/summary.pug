- var summaryStyle = "font-weight: bold; font-size: 16px; line-height: 24px; color: #333333; border: 1px solid #dddddd; border-radius: 8px; padding-top: 12px; padding-right: 12px; padding-bottom: 12px; padding-left: 12px;"
mixin summary(mainUrl, text)
    if mainUrl && text
        // SUMMARY | начало
        table(width="100%" border="0" cellpadding="0" cellspacing="0")
            tr
                td(style="padding-bottom: 12px;")
                    div(style=`${summaryStyle}`)
                        a(target="_blank" href=`${mainUrl}` style="display: block; cursor: pointer; color: #333333; text-decoration: none;")= text
        // SUMMARY | конец