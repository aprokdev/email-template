- var wrapStyle = "text-decoration: none; font-size: 13px; font-weight: normal; line-height: 1.54; color: #3377bb; -webkit-text-size-adjust: none;"
- var importantWrapStyle = "display: inline-block; vertical-align: top; padding-left: 6px; padding-right: 6px; background: rgba(229, 32, 32, 0.08); border-radius: 4px; font-weight: normal; font-size: 13px; line-height: 20px; color: #e52020;"

mixin tags(text, isImportant)
    // Тэги | начало
    table(width="100%" border="0" cellpadding="0" cellspacing="0")
        tr
            td(style="padding-bottom: 8px;")
                div(style=`${wrapStyle}`)
                    if isImportant
                        // ВАЖНО вставлять в блок
                        span(style="display: inline-block; vertical-align: top; padding-right: 10px; font-weight: normal; font-size: 13px; line-height: 20px;")
                            span(style=`${importantWrapStyle}`)
                                | Важно
                        // ВАЖНО конец
                        = text
    // Тэги | конец