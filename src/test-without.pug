include components/card.pug
include components/footer.pug
include components/section.pug
include components/separator.pug
include components/padding.pug
include components/separator.pug

doctype html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"
html
    include components/htmlHead.pug
    - var bodyStyle = "height: 100%; margin: 0; padding: 0; width: 100%; -webkit-text-size-adjust: none; font-size: 14px; line-height: 20px; color: #000000;"
    - var letterTitleStyle = "height: 0; color: #f5f5f5; font-size: 0; margin-top: 0; margin-bottom: 0; padding-left: 0; padding-right: 0; padding-top: 0; padding-bottom: 0;"
    - var sectionInnerStyle = "width: 100%; min-width: 290px; max-width: 600px; padding-left: 20px; padding-right: 20px; background-color: #ffffff; border: solid 1px #ededed; border-top: none; border-bottom: none;"
    - var sectionStyle = "width: 100%; min-width: 290px; max-width: 600px; border: solid 1px #ededed; border-top: none; border-bottom: none; background-color: #ffffff;"
    body(leftmargin="0" marginwidth="0" topmargin="0" marginheight="0" bgcolor="#f5f5f5" offset="0" style=`${bodyStyle}`)
    h1(style=`${letterTitleStyle}`) Константин Константинопольский, приветствуем!

    table(class="main-table" align="center" width="100%" border="0" cellpadding="0" cellspacing="0" style="padding-bottom: 28px; background-color: #f5f5f5")
        tr(style="background-color: #f5f5f5")
            td(align="center" valign="top" style="background-color: #f5f5f5")
                table(align="center" width="100%" border="0" cellpadding="0" cellspacing="0" style="background-color: #f5f5f5")

                    include components/head.pug

                    tr
                        td(align="center" valign="top")
                            table(class="wrap" width="100%" border="0" cellpadding="0" cellspacing="0" style=`${sectionStyle}`)
                                tr
                                    td(style="padding-top: 32px; padding-bottom: 0;")
                            table(class="wrap" align="center" width="100%" border="0" cellpadding="0" cellspacing="0" style=`${sectionInnerStyle}`)
                                +section(
                                    'Тестовая рассылка: (без кавычек в письме)',
                                    `Упрощаются правила проведения конкурсов, в том
                                    числе на работы по сохранению объектов культурного
                                    наследия`,
                                    'https://tracktrack.ru/news/1448',
                                    `Федеральное агенство по делам национальностей ⋅ Проекты постановлений ⋅ Проекты постановлений`,
                                    true,
                                    `Правила формирования федеральной информационной
                                    системы Федеральный реестр сведений о документах об
                                    образовании`
                                )
                                +separator()
                                +section(
                                    'Новый дизайн карточек уведомлений: (это пример заголовка)',
                                    `Упрощаются правила проведения конкурсов, в том
                                    числе на работы по сохранению объектов культурного
                                    наследия`,
                                    'https://tracktrack.ru/news/1448',
                                    `Федеральное агенство по делам национальностей ⋅ Проекты постановлений ⋅ Проекты постановлений`,
                                    true,
                                    `Правила формирования федеральной информационной
                                    системы Федеральный реестр сведений о документах об
                                    образовании`
                                )
                            table(class="wrap" width="100%" border="0" cellpadding="0" cellspacing="0" style="width: 100%; min-width: 290px; max-width: 600px; border: solid 1px #ededed; border-top: none; background-color: #ffffff;")
                                +padding(18)
                    +footer()